<Page x:Class="RatingLog.Grades"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RatingLog"
      xmlns:col="clr-namespace:System.Collections.Generic;assembly=netstandard"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Grades">

    <Grid Background="White" ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ComboBox x:Name="ClassList" Grid.Row="0" Width="200" HorizontalAlignment="Left" Margin="0 30 0 0" SelectionChanged="OnGroupChange">
        </ComboBox>

        <DataGrid Grid.Row="1" x:Name="Table" AutoGenerateColumns="False">

        </DataGrid>
    </Grid>
</Page>
